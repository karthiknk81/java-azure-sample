<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="azMgr" class="edu.karthiknk81.azsamples.AzConnection.AzRMConnector">
        <property name="subscriptionId" value="${azure.subscription.id:96a4f83f-9a81-4321-b8a6-1e198ca1fb31}"/>
    </bean>
    
    <!-- Property placeholder configurer to read from external properties -->
    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:application.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>
</beans>